{
  "name": "atlas-guide",
  "version": "1.1.7",
  "license": "MIT",
  "description": "Atlas is living style-guides & pattern library static site generator with extensive CSS monitoring and components info that could be used virtually with any scss/css project",
  "keywords": [
    "styleguide",
    "styleguide-css",
    "styleguide-generator",
    "documentation-generator",
    "living-styleguide",
    "scss-statistic",
    "css-statistic",
    "statistic",
    "atlas",
    "hologram",
    "aigis"
  ],
  "engines": {
    "node": ">=8",
    "npm": ">=5.4"
  },
  "dependencies": {
    "@dimanech/cssstat-core": "3.2.1",
    "d3-color": "^1.2.3",
    "d3-format": "^1.3.2",
    "d3-scale": "^2.1.2",
    "d3-shape": "^1.2.2",
    "lodash.camelcase": "^4.3.0",
    "lodash.size": "^4.2.0",
    "lodash.uniq": "^4.5.0",
    "marked": "^0.5.0",
    "mustache": "^2.3.2",
    "postcss": "^7.0.2",
    "postcss-scss": "^2.0.0",
    "sass": "^1.13.4",
    "sass-graph": "^3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "coveralls": "3.0.2",
    "eslint": "5.5.0",
    "gulp": "4.0.0",
    "gulp-connect": "5.6.1",
    "gulp-postcss": "8.0.0",
    "gulp-sass": "4.0.1",
    "gulp-sourcemaps": "2.6.4",
    "mocha": "5.2.0",
    "nyc": "^13.0.1",
    "stylelint": "9.5.0",
    "stylelint-order": "1.0.0",
    "stylelint-scss": "3.3.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "ie >= 10",
    "Safari >= 10",
    "iOS >= 9",
    "last 2 Samsung versions",
    "last 2 ChromeAndroid versions"
  ],
  "main": "app/atlas-guide.js",
  "bin": {
    "atlas-guide": "bin/atlas-guide.js"
  },
  "scripts": {
    "lint": "eslint ./ && stylelint assets/**/*.scss",
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=lcov --reporter=text-lcov | coveralls",
    "build": "gulp build",
    "copyhooks": "node .githooks/copy-hooks.js",
    "version": "npm run build && git add -A assets",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:dimanech/atlas-guide.git"
  },
  "author": "Nechepurenko D."
}
