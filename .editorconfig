root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[{package.json,.eslintrc.json}]
indent_size = 2

[*.{scss, sass, less, css}]
indent_style = tab
tab_width = 4

[*.{yml, yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
